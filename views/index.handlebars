<div>
  <div class="row">
    <div class="input-field col s6 shows" id="watched">
      <h2>Watched Shows</h2>

      <ul>
        {{#each shows}}
        {{#unless watched}}
        {{> shows/show-block watch=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="input-field col s6 shows" id="watched">

      <h2>Unwatched Shows</h2>

      <ul>
        {{#each shows}}
        {{#if watched}}
        {{> shows/show-block watch=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>
<div class="search">
  <div class="row">
    <div class="input-field col s12 shows">
      <h4>Add a Show</h4>
    </div>
  </div>
  <form class="create-form">

    <div class="row">
      <div class="col s3"></div>
      <div class="input-field col s6">
        <input id="ca" type="search" required>
        <label class="label-icon" for="ca"><i class="material-icons" id="magnify">search</i></label>
        <i class="material-icons" id="bye">close</i>
      </div>
      <div class="col s1">

        <button id="add" type="submit"><i class="large material-icons">add</i></button>
      </div>
      <div class="col s3"></div>

    </div>

    <div class="row">
      <div class="form-group">
        <div class="col s5" id="seen">
          <label id="seen" for="watched">Have you seen it?</label>
        </div>
        <div class="col s1"></div>
        <div class="col s1">
          <label>
            <input class="with-gap" name="watched" type="radio" value="0" checked />
            <span class="rad">Yes</span>
          </label>
        </div>
        <div class="col s1">
          <label>
            <input class="with-gap" name="watched" type="radio" value="1" />
            <span class="rad">No</span>
          </label>
        </div>
      </div>

    </div>

  </form>
</div>